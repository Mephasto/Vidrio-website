extends layout

block content
    div(id='verticalNav')
        ul
            each show in shows
                li
                    a(href='#'+show._id)=(show.title)
    article
        each show in shows
            - var imgSrc = '/images/shows/' + show._id + '.png';
            - var showDate = new Date(show.date);
            - if(showDate > Date()) {
            -   var done = 'new';
            - }else{
            -    var done ='old';
            - }
            
            div(class='show',id=show._id)
                h4=show.title
                h5=show.time
                div(class='body')
                    p(class='place')=show.place
                    p=show.body
                    p=done
                img(src=imgSrc)
        
extends layout

block content
    article(id="gallery", data-toggle="modal-gallery", data-target="#modal-gallery", class='photos')
        div(id='images')

    div(id="modal-gallery",class="modal modal-gallery hide fade",tabindex="-1")
        div(class="modal-header")
            a(class="close",data-dismiss="modal")=('cerrar')
            h3(class="modal-title")
        div(class="modal-body")
            div(class="modal-image")
        div(class="modal-footer")
            a(class="btn btn-primary modal-next")
                i(class="icon-arrow-right icon-white")
                | Next
            a(class="btn btn-info modal-prev")
                i(class="icon-arrow-left icon-white")
                | Previous
            a(class="btn btn-success modal-play modal-slideshow",data-slideshow="5000")
                i(class="icon-play icon-white")
                | Slideshow
            a(class="btn modal-download",target="_blank")
                i(class="icon-download")
                | Download